<%= form_for @question do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'u-full-width' %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body, size: '80x12', class: 'u-full-width' %>
  </div>
  <div>
    <%= f.label :tags_text, "Tags (comma separated: example, 'ruby, rails')" %>
    <%= f.text_field :tags_text, class: 'u-full-width' %>
  </div>
  <%= f.submit class: 'button-primary' %>
<% end %>
