<div class="row comment">
	<div class="one column"></div>
	<div class="one column"><%= comment.votes_count %><%= link_to "up", vote_question_path(comment, type: "Comment", value: 1), method: "post" %>  <%= link_to "down", vote_question_path(comment, type: "Comment", value: -1), method: "post" %></div>
	<div class="ten columns"><article id="<%= comment.id %>"><%= comment.body %> - <%= link_to comment.user.username %> <%= comment.updated_at %></article></div>
</div>
