<div id="question-header">
	<h4><%= @question.title %></h4>
</div>

<div class="row">
	<div class="one column"><%= pluralize(@question.votes.count, "vote") %></div>
	<div class="eleven columns"><%= @question.body %>
		<%= render @question.tags %>
		asked <%= @question.created_at %> <%= link_to @question.user.username %>
	</div>
</div>
<%= render @question.comments %>

<%= form_for @comment, url: comments_path(question_id: @question) do |f| %>
  <p>
    <%= f.label :Comment %><br>
    <%= f.text_area :body %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<% if flash[:error] %>
	<%= flash[:error] %>
<% end %>

<div class="row">
<h5><%= pluralize(@question.answers.count, "Answer") %></h5>
</div>

<% if @answer %>
	<%= render @answer %>		
	<%= render @answer.comments %>
<% end %>

<% @answers.each do |answer| %>
	<%= render answer %>
	<%= render answer.comments %>
	<%= form_for @comment, url: comments_path(answer_id: answer) do |f| %>
	  <p>
	    <%= f.label :Comment %><br>
	    <%= f.text_area :body %>
	  </p>
	 
	  <p>
	    <%= f.submit %>
	  </p>
	<% end %>
<% end %>
<h5>Your Answer</h5>
	<%= form_for @new_answer, url: answers_path(question_id: @question) do |f| %>
	  <p>
	    <%= f.label :Comment %><br>
	    <%= f.text_area :body %>
	  </p>
	 
	  <p>
	    <%= f.submit %>
	  </p>
	<% end %>
